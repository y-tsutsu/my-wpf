<Window x:Class="digi_timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:digi_timer"
        mc:Ignorable="d"
        Title="Digital Timer" Height="250" Width="800" ShowInTaskbar="False" Topmost="True">
    <Grid>
        <Viewbox>
            <TextBlock x:Name="textBlock" Text="00:00:00" MouseDown="TextBlock_MouseDown"/>
        </Viewbox>
    </Grid>
</Window>
